    mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <mah:Tile x:Name="ASDAS" Title="{x:Static resx:Resources.openReport}" HorizontalAlignment="Left" Margin="278,158,0,0" VerticalAlignment="Top" Width="216" Background="#f4a261" Height="124"/>
        <mah:Tile x:Name="tile1" Title="{x:Static resx:Resources.quickReport}" HorizontalAlignment="Left" Height="115" Margin="278,38,0,0" VerticalAlignment="Top" Width="216" Background="#2a9d8f" />
        <mah:Tile x:Name="tile2" Title="{x:Static resx:Resources.closeReport}" HorizontalAlignment="Left" Height="122" Margin="278,287,0,0" VerticalAlignment="Top" Width="216" Background="#e76f51"/>
    </Grid>
</Window>
